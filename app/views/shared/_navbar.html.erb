<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to root_path, class: "navbar-brand" do %>
    <%= image_tag "https://res.cloudinary.com/dqlvehu5z/image/upload/v1583424588/CHIP-IN/Charities%20pics/world_cjvsmh.png" %>
  <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if current_user %>
        <% if current_user.notifications > 0 %>
          <li >
            <%= link_to dashboard_path do %>
              <div>
                <button type="button" class="btn brn-primary">
                Notification <span class="badge badge-danger"><%= current_user.notifications %></span>
              </button>
                <!-- <i class="far fa-envelope blink no-bullet-points"></i> -->
              </div>
            <% end %>
          </li>
        <% end  %>
      <% end %>

      <% if current_user %>
        <li class="nav-item">
          <div class="hover-underline">
            <%= link_to "HOME", root_path, class: "nav-link hover hover-1" %>
          </div>
        </li>
        <li class="nav-item">
          <div class="hover-underline">
            <%= link_to "ALL EVENTS", events_path, class: "nav-link hover hover-1" %> <!-- root_path is a placeholder for now -->
          </div>
        </li>
        <li class="nav-item">
          <div class="hover-underline">
            <%= link_to "MY EVENTS", dashboard_path, class: "nav-link hover hover-1" %>
          </div>
        </li>
        <li class="nav-item dropdown">
        <% if current_user %>
           <%= cl_image_tag current_user.photo.key, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
        <% end %>
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
          <% if current_user %>
            <%= link_to "Profile", user_path(current_user.id), class: "dropdown-item" %>
          <% end %>
          <% if current_user.role == "Charity" %>
            <%= link_to "Add event", new_event_path, class: "dropdown-item" %>
          <% end %>
          <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
        </div>
      </li>
      <% else %>
        <li class="nav-item">
          <div class="hover-underline">
            <%= link_to "Log in", user_session_path, class: "nav-link hover hover-1" %>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
</div>
