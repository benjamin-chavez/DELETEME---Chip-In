<div class="container new-request py-3">

    <div class="new-review d-flex flex-row justify-content-center pb-5">
      <div class="d-flex flex-column justify-content-center">

        <div class="request-text d-flex justify-content-center mb-1">
            <h5>Your request for:</h5>
        </div>
        <div class="request-text d-flex justify-content-center mt-0">
            <h1><%= @event.name %></h1>
        </div>
        <div>
          <p class="text-center">Send a message to the host to join the event!</p>
        </div>

        <div class="d-flex justify-content-center">
            <%= simple_form_for [@event, @request] do |f| %>
            <%= f.input :message, :placeholder => "Your message here...", :label => false %>
        </div>

        <div class="d-flex justify-content-center">
            <%= link_to 'Back to event', events_path(@event), class: "button-chip-secondary form-buttons back-btn" %>
            <%= f.submit 'Send', class: "button-chip-main form-buttons"%>
            <% end %>

        </div>
      </div>
    </div>
</div>
