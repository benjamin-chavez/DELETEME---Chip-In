<div class="container new-request py-3">

  <div class="new-review d-flex flex-row justify-content-center pb-5">
    <div class="d-flex flex-column justify-content-center">
      <h1 class="text-center pt-5">Write a review:</h1>
      <%= simple_form_for [@user, @review] do |f| %>
        <div class="d-flex flex-row justify-content-center">
          <%= f.input :rating, as: :select, label: "Rate the host", collection: [1,2,3,4,5]%>
        </div>
        <div class="d-flex flex-row justify-content-center">
          <div class="d-flex flex-column">
            <h5 class="text-center" style="color: black">Leave a comment</h5>
            <%= f.input :message, as: :text, :placeholder => "Your message here...", label:false%>
          </div>
        </div>
        <div class="d-flex justify-content-center">
          <%= f.submit 'Send', class: "button-chip-main"%>
        </div>
      <% end %>
    </div>
  </div>

</div>
